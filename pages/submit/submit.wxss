/* pages/submit/submit.wxss */
.container {
  background-color: rgb(20, 20, 20);
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
input {
  border: 1px solid #777777;
  border-radius: 12rpx;
  padding: 10px 20px;
  margin: 15px 0;
  color: #fff;
}
button {
  padding: 0 80rpx;
  margin-bottom: 50px;
  background-color: #303569;
  font-weight: bold;
  color: #9298D0;
  border-radius: 60rpx;
}